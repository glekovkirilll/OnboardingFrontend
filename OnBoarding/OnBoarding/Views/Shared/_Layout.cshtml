<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnBoarding</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnBoarding.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">
                <div id="logo-picture"></div>
                <div id="logo-name"><h4>Продукт</h4></div>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarText">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">О подразделении</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">О команде</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Документация</a>
                    </li>
                </ul>
                <form class="form-inline">
                    <a class="btn btn-outline-secondary m-2" href="#">Войти</a>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   <footer class="myFooter">
        <div class="m-4">
            <div class="links-in-footer">
                <a>Контакты</a>
            </div>
            <div class="links-in-footer">
                <a>Партнёрам</a>
            </div>
            <div class="links-in-footer">
                <a>Помощь</a>
            </div>
            <div class="links-in-footer">
                <a>FAQ</a>
            </div>
            <div class="links-in-footer">
                <a>Telegram</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar-brand{
    padding-bottom: 0;
  }
  #logo-name{
    color: #B3E427;
    margin-left: 1rem;
    float: left;
  }
  #logo-picture{
    width: 20px;
    height: 20px;
    background: #B3E427;
    border-radius: 50%;
    margin-left: 1rem;
    float: left;
    margin-top: 0.4rem;
  }

.myFooter {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 210px;
    background-color: #ECE8FF;
    color: #3A3A3A;
}

.links-in-footer {
    color: #3A3A3A;
    margin-left: 1rem;
    margin-top: 0.5rem;
    font-family: sans-serif;
}

#carouselExampleIndicators {
    height: 40%;
    width: 40%;
}
</style>